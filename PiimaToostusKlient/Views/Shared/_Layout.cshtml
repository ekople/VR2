@using PiimaToostusKlient.Models
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Piimatööstus</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />     
        <link href="@Url.Content("~/Content/themes/JqueryDesign/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/JqueryDesign/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-1.9.1.js")"> </script>        
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-ui-1.10.3.custom.js")"> </script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-ui-1.10.3.custom.min.js")"> </script>          
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.js")"> </script>
        
        @if (Model != null && Model.UserMsg != null)
        {
            <script type="text/javascript">
                $(function() {
                    $("#msgDialog").dialog({
                        modal: true,
                        buttons: {
                            Ok: function() {
                                $(this).dialog("close");
                            }
                        }
                    });

                    $(".ui-dialog-titlebar").css("font-weight", "bold");
                    $(".ui-dialog-titlebar").css("font-size", "20");
                    $(".ui-dialog-titlebar").css("color", "red");
                });
            </script>

            <div id="msgDialog" title="@Model.UserMsg.Pealkiri">
                <p>@Model.UserMsg.Msg</p>
            </div>
        }
    </head>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
</html>