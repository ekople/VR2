<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Piimatööstus</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />     
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/JqueryDesign/jquery-ui-1.10.3.custom.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/JqueryDesign/jquery-ui-1.10.3.custom.min.css")" rel="stylesheet" type="text/css" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-1.9.1.js")"> </script>        
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-ui-1.10.3.custom.js")"> </script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/Jquery/jquery-ui-1.10.3.custom.min.js")"> </script>          
@*        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"> </script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"> </script>*@
        <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.js")"> </script>
        
        @if (Model != null && Model.UserMsg != null)
        {
            <script type="text/javascript">
                $(function() {
                    $("#msgDialog").dialog({
                        modal: true,
                        buttons: {
                            Ok: function() {
                                $(this).dialog("close");
                            }
                        }
                    });

                    $(".ui-dialog-titlebar").css("font-weight", "bold");
                    $(".ui-dialog-titlebar").css("font-size", "20");
                });
            </script>

            <div id="msgDialog" title="@Model.UserMsg.Pealkiri">
                <p>@Model.UserMsg.Msg</p>
            </div>
        }
        else
        {
            <script type="text/javascript">
                $("#msgDialog").hide();
            </script>
        }
            
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <div id="logo">
                    <h1>
                        @Html.ActionLink("Pealeht", "WelcomePage", "Shared")
                    </h1>
                    <p>Piimatööstuse graafikuportaal</p>
                </div>
            </div>
            <!-- end #header -->
            <div id="menu">
                <ul>
                    <li class="first">
                        @Html.ActionLink("Atribuutikad", "Atribuutikad", "Atribuutikad")
                    </li>
                    <li class="second">
                        @Html.ActionLink("Graafikud", "Graafikud", "Graafikud")
                    </li>
                    <li class="third">
                        @Html.ActionLink("Isikud", "Isikud", "Isikud")
                    </li>
                    <li class="forth">
                        @Html.ActionLink("Kasutajad", "Kasutajad", "Kasutajad")
                    </li>
                    <li class="fifth">
                        @Html.ActionLink("Osakonnad", "Osakonnad", "Osakonnad")
                    </li>
                </ul>
            </div>
            <!-- end #menu -->
            <div id="page">
                <div id="page-bgtop">
                    <div id="page-bgbtm">
                        <div id="content">
                            @RenderBody()
                            <div class="post">
                                <div class="post-bgtop">
                                    <div class="post-bgbtm">
                                    </div>
                                </div>
                            </div>
                            <div style="clear: both;">
                                &nbsp;</div>
                        </div>
                        <!-- end #content -->
                        <div style="clear: both;">
                            &nbsp;</div>
                    </div>
                </div>
            </div>
            <!-- end #page -->
            <div id="footer">
                <p>Piimatööstus</p>
            </div>
            <!-- end #footer -->
        </div>
    </body>
</html>